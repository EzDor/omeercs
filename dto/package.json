{
  "name": "@agentic-template/dto",
  "version": "1.0.0",
  "description": "Data Transfer Objects for Agentic System Template",
  "main": "dist/base/base.dto.js",
  "types": "dist/base/base.dto.d.ts",
  "exports": {
    "./src/*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./src/skills": {
      "import": "./dist/skills/index.js",
      "require": "./dist/skills/index.js",
      "types": "./dist/skills/index.d.ts"
    },
    "./src/providers": {
      "import": "./dist/providers/index.js",
      "require": "./dist/providers/index.js",
      "types": "./dist/providers/index.d.ts"
    },
    "./src/prompt-registry": {
      "import": "./dist/prompt-registry/index.js",
      "require": "./dist/prompt-registry/index.js",
      "types": "./dist/prompt-registry/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "pnpm exec eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/mapped-types": "^2.1.0",
    "ajv": "^8.17.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "files": [
    "dist"
  ]
}
