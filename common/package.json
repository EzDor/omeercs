{
  "name": "@agentic-template/common",
  "version": "1.0.0",
  "description": "Common utilities for Agentic System Template",
  "exports": {
    "./src/auth/auth.guard": {
      "import": "./dist/auth/auth.guard.js",
      "require": "./dist/auth/auth.guard.js",
      "types": "./dist/auth/auth.guard.d.ts"
    },
    "./src/auth/public.decorator": {
      "import": "./dist/auth/public.decorator.js",
      "require": "./dist/auth/public.decorator.js",
      "types": "./dist/auth/public.decorator.d.ts"
    },
    "./src/*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "pnpm exec eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@agentic-template/dao": "workspace:*",
    "@agentic-template/dto": "workspace:*",
    "@clerk/backend": "^2.17.1",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "ioredis": "^5.4.2",
    "langsmith": "^0.3.81",
    "nestjs-cls": "^6.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  }
}
