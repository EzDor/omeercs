{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "PromptTemplateFrontmatter": {
      "$id": "#/definitions/PromptTemplateFrontmatter",
      "title": "Prompt Template Frontmatter Schema",
      "description": "JSON Schema for validating YAML frontmatter in prompt template files",
      "type": "object",
      "required": ["prompt_id", "version", "description", "vars_schema"],
      "additionalProperties": false,
      "properties": {
        "prompt_id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Unique identifier for the prompt (lowercase, underscores, starts with letter)"
        },
        "version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
          "description": "Semantic version string (e.g., 1.0.0, 2.1.0-beta.1)"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "Human-readable description of the prompt's purpose"
        },
        "vars_schema": {
          "type": "object",
          "description": "JSON Schema (draft-07) for validating template variables",
          "required": ["type", "properties"],
          "properties": {
            "type": {
              "const": "object"
            },
            "required": {
              "type": "array",
              "items": { "type": "string" }
            },
            "properties": {
              "type": "object",
              "additionalProperties": {
                "type": "object"
              }
            }
          }
        },
        "model_defaults": {
          "type": "object",
          "description": "Optional LLM configuration defaults",
          "additionalProperties": false,
          "properties": {
            "model": {
              "type": "string",
              "description": "Model identifier (e.g., gemini/gemini-2.0-flash)"
            },
            "temperature": {
              "type": "number",
              "minimum": 0,
              "maximum": 2,
              "description": "Temperature for response generation"
            },
            "max_tokens": {
              "type": "integer",
              "minimum": 1,
              "maximum": 128000,
              "description": "Maximum tokens in response"
            }
          }
        },
        "output_schema": {
          "type": "object",
          "description": "Optional JSON Schema for expected output validation"
        }
      }
    },

    "ConfigTemplate": {
      "$id": "#/definitions/ConfigTemplate",
      "title": "Config Template Schema",
      "description": "JSON Schema for validating config template files",
      "type": "object",
      "required": ["config_id", "version", "description", "vars_schema", "template"],
      "additionalProperties": false,
      "properties": {
        "config_id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Unique identifier for the config"
        },
        "version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
          "description": "Semantic version string"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "Human-readable description"
        },
        "vars_schema": {
          "type": "object",
          "description": "JSON Schema for validating template variables",
          "required": ["type", "properties"],
          "properties": {
            "type": { "const": "object" },
            "required": {
              "type": "array",
              "items": { "type": "string" }
            },
            "properties": {
              "type": "object"
            }
          }
        },
        "template": {
          "type": "object",
          "description": "Configuration template object with {{variable}} placeholders"
        }
      }
    },

    "ReviewRubric": {
      "$id": "#/definitions/ReviewRubric",
      "title": "Review Rubric Schema",
      "description": "JSON Schema for validating review rubric files",
      "type": "object",
      "required": ["rubric_id", "version", "description", "criteria", "output_schema"],
      "additionalProperties": false,
      "properties": {
        "rubric_id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Unique identifier for the rubric"
        },
        "version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
          "description": "Semantic version string"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "Human-readable description"
        },
        "criteria": {
          "type": "array",
          "minItems": 1,
          "description": "List of evaluation criteria",
          "items": {
            "type": "object",
            "required": ["name", "description", "scoring_guidance"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9_]*$",
                "description": "Criterion identifier"
              },
              "description": {
                "type": "string",
                "minLength": 5,
                "description": "What is being evaluated"
              },
              "scoring_guidance": {
                "type": "string",
                "minLength": 10,
                "description": "How to score (e.g., '1=poor, 5=excellent')"
              },
              "weight": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Relative importance (0-1)"
              }
            }
          }
        },
        "output_schema": {
          "type": "object",
          "description": "JSON Schema for expected critique output"
        }
      }
    }
  }
}
