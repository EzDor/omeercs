# Environment Configuration
NODE_ENV=development
ENVIRONMENT=local-development

# Port Configuration
WEBAPP_PORT=5173
WEBAPP_URL=http://localhost:5173

API_CENTER_PORT=3001
API_CENTER_DEBUG_PORT=9229
AGENT_PLATFORM_PORT=3002
AGENT_PLATFORM_DEBUG_PORT=9230

# Application URLs
FRONTEND_URL=http://localhost:5173

# CORS Configuration
CORS_DOMAIN=localhost

# Database Configuration
CENTER_DB_USER=postgres
CENTER_DB_PASSWORD=postgres
CENTER_DB_NAME=agentic_template
CENTER_DB_PORT=5432

# Database Individual Variables (for dynamic URL building in NestJS services)
DB_HOST=center-db
DB_PORT=5432
DB_NAME=agentic_template
DB_USER=app_user
DB_PASSWORD=app_pass
DB_SSL_REJECT_UNAUTHORIZED=true
APP_SCHEMA=app

# App User Configuration (non-superuser for RLS enforcement)
APP_DB_USER=app_user
APP_DB_PASS=app_pass

# Log Level
LOG_LEVEL=debug

# Clerk Configuration
CLERK_PUBLISHABLE_KEY=<CHANGE_IT_TO_YOUR_KEY>
CLERK_SECRET_KEY=<CHANGE_IT_TO_YOUR_KEY>

# Redis/Valkey Configuration
REDIS_HOST=valkey
REDIS_PORT=6379
REDIS_PASSWORD=devpassword
REDIS_URL=redis://:devpassword@valkey:6379
REDIS_TLS_ENABLED=false

# LiteLLM Proxy Configuration
LITELLM_PORT=4000
LITELLM_MASTER_KEY=sk-1234
LITELLM_DATABASE_URL=postgresql://postgres:postgres@center-db:5432/agentic_template?schema=litellm
LITELLM_BASE_URL=http://litellm-proxy:4000
LITELLM_API_KEY=sk-1234
LITELLM_MODEL=gemini/gemini-1.5-pro
OPENAI_API_KEY=<CHANGE_IT_TO_YOUR_KEY>
ANTHROPIC_API_KEY=<CHANGE_IT_TO_YOUR_KEY>
GEMINI_API_KEY=<CHANGE_IT_TO_YOUR_KEY>

# LiteLLM Documentation (enabled locally for development)
NO_DOCS=False
NO_REDOC=False

# LiteLLM UI Authentication
LITELLM_UI_USERNAME=admin
LITELLM_UI_PASSWORD=sk-1234

# Chat Feature Configuration
CHAT_LLM_MODEL=gemini-2.5-flash-lite
CHAT_MAX_MESSAGE_LENGTH=10000

# Workflow Configuration
WORKFLOW_RECURSION_LIMIT=50
WORKFLOW_MAX_STEPS=100
WORKFLOW_TIMEOUT_MS=900000
WORKFLOW_MAX_MEMORY_MB=512
WORKFLOW_STACK_SIZE_MB=4

# LangSmith Tracing Configuration
# Obtain API key from https://smith.langchain.com/settings
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__REPLACE_WITH_YOUR_API_KEY
LANGCHAIN_PROJECT=agentic-template-dev
LANGCHAIN_CALLBACKS_BACKGROUND=true

# Audio Provider Configuration
# Set to 'true' to use stub audio provider for testing (no real API calls)
AUDIO_PROVIDER_STUB=false

