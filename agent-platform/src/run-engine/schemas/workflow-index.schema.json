{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "workflow-index.schema.json",
  "title": "Workflow Index Schema",
  "description": "JSON Schema for validating the workflows index.yaml file",
  "type": "object",
  "required": ["version", "updated_at", "workflows"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Index schema version"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "workflows": {
      "type": "array",
      "items": { "$ref": "#/$defs/workflowIndexEntry" },
      "description": "List of available workflows"
    }
  },
  "$defs": {
    "workflowIndexEntry": {
      "type": "object",
      "required": ["workflow_name", "version", "status"],
      "additionalProperties": false,
      "properties": {
        "workflow_name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9._]*$",
          "description": "Workflow identifier"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?(\\+[a-zA-Z0-9.]+)?$",
          "description": "Semantic version"
        },
        "file": {
          "type": "string",
          "description": "Custom filename (defaults to {workflow_name}.v{version}.yaml)"
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "experimental"],
          "description": "Workflow status"
        }
      }
    }
  }
}
